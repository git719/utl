{
  "apiVersion": "apps/v1",
  "metadata": {
    "labels": [
      "Black Label",
      "Seal of approval",
      "Sophisticated"
    ],
    "namespace": "kube-system"
  },
  "spec": {
    "template": {
      "metadata": {
        "labels": [
          "Black Label",
          "Seal of approval",
          "Sophisticated"
        ],
        "name": "ntpcron"
      },
      "spec": {
        "containers": [
          {
            "args": [
              "F=/metc/cron.hourly/ntpcron\necho '#!/bin/bash' \u003e $F\necho 'systemctl restart systemd-timesyncd' \u003e\u003e $F\nchmod 755 $F\nsleep 4h\n",
              "script.sh"
            ],
            "command": [
              "/bin/bash",
              "-c"
            ],
            "image": "ubuntu:16.04",
            "name": "ntpcron",
            "resources": {
              "requests": {
                "cpu": 0.1
              }
            },
            "securityContext": {
              "privileged": true,
              "runAsUser": 0
            },
            "volumeMounts": [
              {
                "mountPath": "/metc",
                "name": "metc"
              }
            ]
          }
        ],
        "volumes": [
          {
            "hostPath": {
              "path": "/etc"
            },
            "name": "metc"
          }
        ]
      }
    }
  }
}
